        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:id="@+id/ed1"
        android:text="cs"
        android:textSize="20dp"
        />
</LinearLayout>